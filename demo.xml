<?xml version="1.0" encoding="UTF-8" ?>
<workload name="umstor-cos-4k-5min-rw" description="sample benchmark for s3">
    <auth type="mock" />
    <storage type="mock" config="size=64000" />

    <workflow>
	<workstage name="init_create_bucket">
	    <work name="init1" type="init" workers="1" config="cprefix=umstor-cos1;containers=r(1,3)" driver="driver1">
	    </work>
	    <work name="init2" type="init" workers="1" config="cprefix=umstor-cos2;containers=r(1,3)" driver="driver2">
	    </work>
	    <work name="init3" type="init" workers="1" config="cprefix=umstor-cos3;containers=r(1,3)" driver="driver3">
	    </work>
	</workstage>

	<workstage name="prepare">
	    <work type="prepare" workers="100" config="cprefix=umstor-cos1;containers=r(1,3);objects=r(1,1200);sizes=c(4)KB" driver="driver1" >
	    </work>
	    <work type="prepare" workers="100" config="cprefix=umstor-cos2;containers=r(1,3);objects=r(1,1200);sizes=c(4)KB" driver="driver2">
	    </work>
	    <work type="prepare" workers="100" config="cprefix=umstor-cos3;containers=r(1,3);objects=r(1,1200);sizes=c(4)KB" driver="driver3">
	    </work>
	</workstage>

<!-- read -->
	<workstage name="umstor_4k_5min_read*50">
	    <work name="main" workers="50" runtime="120" driver="driver1">
		<operation type="read" ratio="100" config="cprefix=umstor-cos1;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	    <work name="main" workers="50" runtime="120" driver="driver2">
		<operation type="read" ratio="100" config="cprefix=umstor-cos2;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	    <work name="main" workers="50" runtime="120" driver="driver3">
		<operation type="read" ratio="100" config="cprefix=umstor-cos3;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	</workstage>

	<workstage name="umstor_4k_5min_read*200">
	    <work name="main" workers="200" runtime="120" driver="driver1">
		<operation type="read" ratio="100" config="cprefix=umstor-cos1;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	    <work name="main" workers="200" runtime="120" driver="driver2">
		<operation type="read" ratio="100" config="cprefix=umstor-cos2;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	    <work name="main" workers="200" runtime="120" driver="driver3">
		<operation type="read" ratio="100" config="cprefix=umstor-cos3;containers=u(1,3);objects=u(1,1200)" />
	    </work>
	</workstage>

<!-- delete -->
	<workstage name="cleanup">
	    <work type="cleanup" workers="50" config="cprefix=umstor-cos1;containers=r(1,3);objects=r(1,1200)" driver="driver1">
	    </work>
	    <work type="cleanup" workers="50" config="cprefix=umstor-cos2;containers=r(1,3);objects=r(1,1200)" driver="driver2">
	    </work>
	    <work type="cleanup" workers="50" config="cprefix=umstor-cos3;containers=r(1,3);objects=r(1,1200)" driver="driver3">
	    </work>
	</workstage>

	<workstage name="dispose">
	    <work type="dispose" workers="50" config="cprefix=umstor-cos1;containers=r(1,3)" driver="driver1">
	    </work>
	    <work type="dispose" workers="50" config="cprefix=umstor-cos2;containers=r(1,3)" driver="driver2">
	    </work>
	    <work type="dispose" workers="50" config="cprefix=umstor-cos3;containers=r(1,3)" driver="driver3">
	    </work>
	</workstage>
    </workflow>
</workload>
